<!-- Image Picker Dialog -->
<dialog
  class="p-0 rounded-lg shadow-xl backdrop:bg-black/50 bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] w-[700px] max-w-[90vw] max-h-[90vh] overflow-hidden"
  data-app-target="imageDialog"
>
  <div class="text-[var(--theme-text-primary)] flex flex-col h-full max-h-[90vh]">
    <!-- Header -->
    <div class="flex-shrink-0 flex items-center justify-between px-4 pt-4">
      <h3 class="text-sm font-semibold">Insert Image</h3>
      <button
        type="button"
        data-action="click->app#closeImageDialog"
        class="p-1 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Tabs -->
    <div class="flex-shrink-0 flex border-b border-[var(--theme-border)] px-4 mt-2">
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="local"
        data-app-target="imageTabLocal"
        class="px-4 py-2 text-sm font-medium border-b-2 border-[var(--theme-accent)] text-[var(--theme-accent)]"
      >
        Local
      </button>
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="folder"
        data-app-target="imageTabFolder"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        Folder
      </button>
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="web"
        data-app-target="imageTabWeb"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        Web Search
      </button>
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="google"
        data-app-target="imageTabGoogle"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        Google
      </button>
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="pinterest"
        data-app-target="imageTabPinterest"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        Pinterest
      </button>
      <button
        type="button"
        data-action="click->app#switchImageTab"
        data-tab="ai"
        data-app-target="imageTabAi"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-secondary)]"
      >
        AI Generate
      </button>
    </div>

    <!-- Scrollable Content Area -->
    <div class="flex-1 min-h-0 overflow-y-auto">
    <!-- Tab Content: Local Images (server-side images_path) -->
    <div class="p-4" data-app-target="imageLocalPanel">
      <!-- Configuration Required Notice -->
      <div class="hidden" data-app-target="localImagesConfigNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2">Local Images Path Required</h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            To browse local images, configure an images directory path.
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong>Quick setup:</strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li>Edit <code class="bg-[var(--theme-code-bg)] px-1 rounded">.fed</code> in your notes folder</li>
              <li>Add: <code class="bg-[var(--theme-code-bg)] px-1 rounded">images_path = /path/to/images</code></li>
            </ol>
          </div>
        </div>
      </div>

      <!-- Search Form (shown when configured) -->
      <div data-app-target="localImagesForm">
        <div class="mb-3">
          <input
            type="text"
            data-app-target="imageSearch"
            data-action="input->app#onImageSearch"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="Search images by filename..."
          >
        </div>

        <!-- Image Grid -->
        <div class="grid grid-cols-5 gap-2 mb-4 min-h-[200px] max-h-[300px] overflow-y-auto" data-app-target="imageGrid">
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>
    </div>

    <!-- Tab Content: Folder (browser folder picker) -->
    <div class="p-4 hidden" data-app-target="imageFolderPanel">
      <!-- API Not Supported Notice -->
      <div class="hidden" data-app-target="folderApiNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2">File System Access API Required</h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            This feature requires the File System Access API, which may be disabled in your browser.
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong>To enable in Brave:</strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li>Go to <code class="bg-[var(--theme-code-bg)] px-1 rounded">brave://flags</code></li>
              <li>Search for <code class="bg-[var(--theme-code-bg)] px-1 rounded">File System Access API</code></li>
              <li>Set to <code class="bg-[var(--theme-code-bg)] px-1 rounded">Enabled</code></li>
              <li>Restart your browser</li>
            </ol>
            <p class="mt-3 mb-2"><strong>Supported browsers:</strong></p>
            <p class="text-[var(--theme-text-muted)]">Chrome 86+, Edge 86+, Opera 72+, Brave (with flag)</p>
            <p class="mt-2 text-[var(--theme-text-muted)]">Firefox and Safari do not support this API.</p>
          </div>
        </div>
      </div>

      <!-- Browse folder prompt (shown when API available) -->
      <div class="hidden" data-app-target="browsePrompt">
        <div class="flex flex-col items-center justify-center py-6">
          <svg class="w-10 h-10 mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          <p class="text-sm text-[var(--theme-text-muted)] mb-3 text-center">
            Select a folder from your computer to browse images
          </p>
          <button
            type="button"
            data-action="click->app#browseLocalFolder"
            class="px-4 py-2 bg-[var(--theme-accent)] text-[var(--theme-accent-text)] rounded-md hover:bg-[var(--theme-accent-hover)] text-sm font-medium"
          >
            Browse Folder...
          </button>
        </div>
      </div>

      <!-- Grid for folder images (shown after folder selected) -->
      <div class="hidden" data-app-target="localFolderContainer">
        <div class="flex items-center justify-between mb-3">
          <span class="text-xs text-[var(--theme-text-muted)]" data-app-target="localFolderStatus">No folder selected</span>
          <button
            type="button"
            data-action="click->app#browseLocalFolder"
            class="text-xs text-[var(--theme-accent)] hover:underline"
          >
            Change folder...
          </button>
        </div>
        <!-- Search -->
        <div class="mb-3">
          <input
            type="text"
            data-app-target="folderImageSearch"
            data-action="input->app#onFolderImageSearch"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="Search images by filename..."
          >
        </div>
        <div class="grid grid-cols-5 gap-2 mb-4 min-h-[200px] max-h-[300px] overflow-y-auto" data-app-target="localFolderGrid">
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>
    </div>

    <!-- Tab Content: Web Search (Bing/DuckDuckGo) -->
    <div class="p-4 hidden" data-app-target="imageWebPanel">
      <!-- Search -->
      <div class="mb-3">
        <div class="flex gap-2">
          <input
            type="text"
            data-app-target="webImageSearch"
            data-action="keydown->app#onWebImageSearchKeydown"
            class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="Search web images..."
          >
          <button
            type="button"
            data-action="click->app#searchWebImages"
            data-app-target="webSearchBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Search
          </button>
        </div>
      </div>

      <!-- Status -->
      <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-app-target="webImageStatus">
        Enter keywords and click Search or press Enter
      </div>

      <!-- Image Grid -->
      <div class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto" data-app-target="webImageGrid">
        <!-- Images will be rendered by JavaScript -->
      </div>
    </div>

    <!-- Tab Content: Google Images (requires API key) -->
    <div class="p-4 hidden" data-app-target="imageGooglePanel">
      <!-- Configuration Required Notice -->
      <div class="hidden" data-app-target="googleImagesConfigNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2">Google API Configuration Required</h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            To search Google Images, you need to configure a Google API key and Custom Search Engine ID.
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong>Quick setup:</strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li>Edit the <code class="bg-[var(--theme-code-bg)] px-1 rounded">.fed</code> file in your notes folder</li>
              <li>Add: <code class="bg-[var(--theme-code-bg)] px-1 rounded">google_api_key = YOUR_KEY</code></li>
              <li>Add: <code class="bg-[var(--theme-code-bg)] px-1 rounded">google_cse_id = YOUR_CSE_ID</code></li>
            </ol>
          </div>
          <a
            href="https://github.com/akitaonrails/FrankMD#optional-google-image-search"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 text-xs text-[var(--theme-accent)] hover:underline"
          >
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
            </svg>
            View full setup instructions on GitHub
          </a>
        </div>
      </div>

      <!-- Search Form (shown when configured) -->
      <div data-app-target="googleImagesForm">
        <!-- Search -->
        <div class="mb-3">
          <div class="flex gap-2">
            <input
              type="text"
              data-app-target="googleImageSearch"
              data-action="keydown->app#onGoogleImageSearchKeydown"
              class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
              placeholder="Search Google Images..."
            >
            <button
              type="button"
              data-action="click->app#searchGoogleImages"
              data-app-target="googleSearchBtn"
              class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-1"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Search
            </button>
          </div>
        </div>

        <!-- Status -->
        <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-app-target="googleImageStatus">
          Enter keywords and click Search or press Enter
        </div>

        <!-- Image Grid with infinite scroll -->
        <div
          class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto"
          data-app-target="googleImageGrid"
          data-action="scroll->app#onGoogleImageScroll"
        >
          <!-- Images will be rendered by JavaScript -->
        </div>
      </div>
    </div>

    <!-- Tab Content: Pinterest -->
    <div class="p-4 hidden" data-app-target="imagePinterestPanel">
      <!-- Search -->
      <div class="mb-3">
        <div class="flex gap-2">
          <input
            type="text"
            data-app-target="pinterestImageSearch"
            data-action="keydown->app#onPinterestImageSearchKeydown"
            class="flex-1 px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="Search Pinterest..."
          >
          <button
            type="button"
            data-action="click->app#searchPinterestImages"
            data-app-target="pinterestSearchBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-error)] text-white hover:opacity-90 flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Search
          </button>
        </div>
      </div>

      <!-- Status -->
      <div class="mb-2 text-xs text-[var(--theme-text-muted)]" data-app-target="pinterestImageStatus">
        Enter keywords and click Search or press Enter
      </div>

      <!-- Image Grid -->
      <div class="grid grid-cols-4 gap-2 mb-4 min-h-[200px] max-h-[350px] overflow-y-auto" data-app-target="pinterestImageGrid">
        <!-- Images will be rendered by JavaScript -->
      </div>
    </div>

    <!-- Tab Content: AI Image Generation -->
    <div class="p-4 hidden" data-app-target="imageAiPanel">
      <!-- Configuration Required Notice -->
      <div class="hidden" data-app-target="aiImageConfigNotice">
        <div class="p-4 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
          <svg class="w-10 h-10 mx-auto mb-3 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <h4 class="text-sm font-semibold mb-2">Gemini API Key Required</h4>
          <p class="text-xs text-[var(--theme-text-muted)] mb-3">
            AI image generation uses Google's Imagen models and requires a Gemini API key.
          </p>
          <div class="text-xs text-left bg-[var(--theme-bg-primary)] p-3 rounded border border-[var(--theme-border)] mb-3">
            <p class="mb-2"><strong>Quick setup:</strong></p>
            <ol class="list-decimal list-inside space-y-1 text-[var(--theme-text-muted)]">
              <li>Get an API key from <a href="https://aistudio.google.com/app/apikey" target="_blank" class="text-[var(--theme-accent)] hover:underline">aistudio.google.com</a></li>
              <li>Edit <code class="bg-[var(--theme-code-bg)] px-1 rounded">.fed</code> in your notes folder</li>
              <li>Add: <code class="bg-[var(--theme-code-bg)] px-1 rounded">gemini_api_key = YOUR_KEY</code></li>
            </ol>
          </div>
        </div>
      </div>

      <!-- AI Generation Form (shown when configured) -->
      <div data-app-target="aiImageForm" class="hidden">
        <!-- Model Display -->
        <div class="mb-3 text-xs text-[var(--theme-text-muted)]">
          Model: <span data-app-target="aiImageModel" class="font-medium text-[var(--theme-text-secondary)]"></span>
        </div>

        <!-- Reference Image Section (optional) -->
        <div class="mb-3" data-app-target="aiRefImageSection">
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1">
            Reference image (optional) - guide the generation with an existing image
          </label>

          <!-- Selected Reference Preview -->
          <div class="hidden mb-2 p-2 bg-[var(--theme-bg-tertiary)] rounded-lg" data-app-target="aiRefImagePreviewContainer">
            <div class="flex items-center gap-3">
              <img data-app-target="aiRefImagePreview" class="w-16 h-16 object-cover rounded" alt="Reference" />
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium truncate" data-app-target="aiRefImageName"></p>
                <button
                  type="button"
                  data-action="click->app#clearAiRefImage"
                  class="text-xs text-[var(--theme-error)] hover:underline"
                >
                  Remove reference
                </button>
              </div>
            </div>
          </div>

          <!-- Reference Image Search & Grid -->
          <div data-app-target="aiRefImagePicker">
            <input
              type="text"
              data-app-target="aiRefImageSearch"
              data-action="input->app#onAiRefImageSearch"
              class="w-full px-3 py-1.5 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)] mb-2"
              placeholder="Search reference images..."
            >
            <div class="grid grid-cols-6 gap-1.5 max-h-[120px] overflow-y-auto" data-app-target="aiRefImageGrid">
              <!-- Reference images will be rendered by JavaScript -->
            </div>
          </div>
        </div>

        <!-- Prompt Input -->
        <div class="mb-3">
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1">Describe the image you want to generate</label>
          <textarea
            data-app-target="aiImagePrompt"
            data-action="keydown->app#onAiImagePromptKeydown"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)] resize-none"
            rows="2"
            placeholder="A photorealistic image of a mountain landscape at sunset with dramatic clouds..."
          ></textarea>
        </div>

        <!-- Generate Button -->
        <div class="mb-4">
          <button
            type="button"
            data-action="click->app#generateAiImage"
            data-app-target="aiImageGenerateBtn"
            class="px-4 py-2 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Generate Image
          </button>
        </div>

        <!-- Processing Overlay -->
        <div class="hidden" data-app-target="aiImageProcessing">
          <div class="p-8 bg-[var(--theme-bg-tertiary)] rounded-lg text-center">
            <svg class="animate-spin w-8 h-8 mx-auto mb-3 text-[var(--theme-accent)]" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-sm text-[var(--theme-text-secondary)] mb-1">Generating image with <span data-app-target="aiImageProcessingModel" class="font-medium text-[var(--theme-accent)]"></span></p>
            <p class="text-xs text-[var(--theme-text-muted)]">Press <kbd class="px-1.5 py-0.5 rounded bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] font-mono">ESC</kbd> to cancel</p>
          </div>
        </div>

        <!-- Generated Image Preview -->
        <div class="hidden" data-app-target="aiImageResult">
          <div class="flex gap-4">
            <!-- Image Preview (left side) -->
            <div class="flex-shrink-0">
              <label class="block text-xs text-[var(--theme-text-muted)] mb-1">Generated Image</label>
              <div class="border border-[var(--theme-border)] rounded-lg overflow-hidden bg-[var(--theme-bg-tertiary)]">
                <img data-app-target="aiImagePreview" class="max-w-[200px] max-h-[150px] object-contain" alt="Generated image" />
              </div>
            </div>

            <!-- Options (right side) -->
            <div class="flex-1 min-w-0">
              <!-- Revised Prompt (if available) -->
              <div class="hidden mb-3" data-app-target="aiImageRevisedPromptContainer">
                <label class="block text-xs text-[var(--theme-text-muted)] mb-1">AI-revised prompt</label>
                <p class="text-xs text-[var(--theme-text-secondary)] bg-[var(--theme-bg-tertiary)] p-2 rounded line-clamp-2" data-app-target="aiImageRevisedPrompt"></p>
              </div>

              <!-- Save Options -->
              <div class="space-y-2">
                <label class="block text-xs text-[var(--theme-text-muted)] mb-1">Save to:</label>
                <label class="flex items-center gap-2 text-sm cursor-pointer">
                  <input
                    type="radio"
                    name="aiImageSaveOption"
                    value="local"
                    checked
                    data-app-target="aiImageSaveLocal"
                    class="text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
                  >
                  <span>notes/images/ directory</span>
                </label>
                <label class="flex items-center gap-2 text-sm cursor-pointer" data-app-target="aiImageS3OptionContainer">
                  <input
                    type="radio"
                    name="aiImageSaveOption"
                    value="s3"
                    data-app-target="aiImageSaveS3"
                    class="text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
                  >
                  <span>AWS S3</span>
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div><!-- End Scrollable Content Area -->

    <!-- Selected Image Options (shared across all tabs) -->
    <div class="flex-shrink-0 border-t border-[var(--theme-border)] px-4 pt-3 hidden max-h-[200px] overflow-y-auto" data-app-target="imageOptions">
      <div class="flex items-center gap-2 mb-3 text-sm">
        <span class="text-[var(--theme-text-muted)]">Selected:</span>
        <span class="font-medium truncate max-w-md" data-app-target="selectedImageName"></span>
      </div>

      <!-- Options -->
      <div class="space-y-3">
        <!-- Alt Text -->
        <div>
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1">Alt Text (optional)</label>
          <input
            type="text"
            data-app-target="imageAlt"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="Describe the image..."
          >
        </div>

        <!-- Link URL -->
        <div>
          <label class="block text-xs text-[var(--theme-text-muted)] mb-1">Link URL (optional, makes image clickable)</label>
          <input
            type="text"
            data-app-target="imageLink"
            class="w-full px-3 py-2 text-sm border border-[var(--theme-border)] rounded-md bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
            placeholder="https://..."
          >
        </div>

        <!-- S3 Upload Option (for local server images) -->
        <div class="hidden" data-app-target="s3Option">
          <label class="flex items-center gap-2 text-sm cursor-pointer">
            <input
              type="checkbox"
              data-app-target="uploadToS3"
              data-action="change->app#onS3CheckboxChange"
              class="rounded border-[var(--theme-border)] text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
            >
            <span>Upload to AWS S3 first</span>
          </label>
          <p class="text-xs text-[var(--theme-text-muted)] mt-1 ml-6">
            Image will be uploaded to S3 and the URL will be used instead of local path
          </p>
          <!-- Resize option (only when S3 is checked) -->
          <div class="hidden mt-2 ml-6" data-app-target="resizeOptionLocal">
            <label class="flex items-center gap-2 text-sm">
              <span>Resize:</span>
              <select
                data-app-target="resizeSelectLocal"
                class="px-2 py-1 text-sm border border-[var(--theme-border)] rounded bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
              >
                <option value="">None (original size)</option>
                <option value="0.25">1/4 size (25%)</option>
                <option value="0.5" selected>1/2 size (50%)</option>
                <option value="0.67">2/3 size (67%)</option>
              </select>
              <span class="text-[var(--theme-text-muted)]">+ compress</span>
            </label>
          </div>
        </div>

        <!-- S3 Upload Option (for local folder images) -->
        <div class="hidden" data-app-target="s3FolderOption">
          <label class="flex items-center gap-2 text-sm cursor-pointer">
            <input
              type="checkbox"
              data-app-target="uploadFolderToS3"
              data-action="change->app#onS3FolderCheckboxChange"
              class="rounded border-[var(--theme-border)] text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
            >
            <span>Upload to AWS S3</span>
          </label>
          <p class="text-xs text-[var(--theme-text-muted)] mt-1 ml-6">
            Image will be uploaded to S3 (cloud URL). Otherwise saves to notes/images/ directory.
          </p>
          <!-- Resize option (always shown for folder uploads) -->
          <div class="mt-2 ml-6" data-app-target="resizeOptionFolder">
            <label class="flex items-center gap-2 text-sm">
              <span>Resize:</span>
              <select
                data-app-target="resizeSelectFolder"
                class="px-2 py-1 text-sm border border-[var(--theme-border)] rounded bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
              >
                <option value="">None (original size)</option>
                <option value="0.25">1/4 size (25%)</option>
                <option value="0.5" selected>1/2 size (50%)</option>
                <option value="0.67">2/3 size (67%)</option>
              </select>
              <span class="text-[var(--theme-text-muted)]">+ compress</span>
            </label>
          </div>
        </div>

        <!-- S3 Re-upload Option (for external images) -->
        <div class="hidden" data-app-target="s3ExternalOption">
          <label class="flex items-center gap-2 text-sm cursor-pointer">
            <input
              type="checkbox"
              data-app-target="reuploadToS3"
              data-action="change->app#onS3ExternalCheckboxChange"
              class="rounded border-[var(--theme-border)] text-[var(--theme-accent)] focus:ring-[var(--theme-accent)]"
            >
            <span>Download and re-upload to AWS S3</span>
          </label>
          <p class="text-xs text-[var(--theme-text-muted)] mt-1 ml-6">
            Image will be downloaded and uploaded to your S3, using your URL instead of the original
          </p>
          <!-- Resize option (only when S3 is checked) -->
          <div class="hidden mt-2 ml-6" data-app-target="resizeOptionExternal">
            <label class="flex items-center gap-2 text-sm">
              <span>Resize:</span>
              <select
                data-app-target="resizeSelectExternal"
                class="px-2 py-1 text-sm border border-[var(--theme-border)] rounded bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--theme-accent)]"
              >
                <option value="">None (original size)</option>
                <option value="0.25">1/4 size (25%)</option>
                <option value="0.5" selected>1/2 size (50%)</option>
                <option value="0.67">2/3 size (67%)</option>
              </select>
              <span class="text-[var(--theme-text-muted)]">+ compress</span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Indicator -->
    <div class="flex-shrink-0 hidden items-center justify-center py-8 px-4" data-app-target="imageLoading">
      <svg class="animate-spin w-6 h-6 text-[var(--theme-accent)]" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="ml-2 text-sm text-[var(--theme-text-muted)]" data-app-target="imageLoadingText">Uploading to S3...</span>
    </div>

    <!-- Footer -->
    <div class="flex-shrink-0 flex justify-end gap-2 px-4 pb-4 pt-4 border-t border-[var(--theme-border)]">
      <button
        type="button"
        data-action="click->app#closeImageDialog"
        class="px-3 py-1.5 text-sm rounded-md hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-secondary)]"
      >
        Cancel
      </button>
      <button
        type="button"
        data-action="click->app#insertImage"
        data-app-target="insertImageBtn"
        class="px-3 py-1.5 text-sm rounded-md bg-[var(--theme-accent)] text-[var(--theme-accent-text)] hover:bg-[var(--theme-accent-hover)] disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
      >
        Insert Image
      </button>
    </div>
  </div>
</dialog>
