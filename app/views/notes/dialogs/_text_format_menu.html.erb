<!-- Text Format Context Menu -->
<div data-controller="text-format"
     data-action="text-format:content-changed->app#onTextFormatContentChanged text-format:closed->app#onTextFormatClosed">
  <div class="fixed hidden bg-[var(--theme-bg-secondary)] border border-[var(--theme-border)] rounded-lg shadow-lg py-1 min-w-[180px] z-50"
       data-text-format-target="menu"
       data-action="keydown->text-format#onMenuKeydown"
       tabindex="-1">
    <!-- Menu items are rendered dynamically by the controller -->
  </div>
</div>
