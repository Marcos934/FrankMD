<!-- Log Viewer Dialog (Ctrl+Shift+L) -->
<div data-controller="log-viewer">
  <dialog
    data-log-viewer-target="dialog"
    data-action="click->log-viewer#onDialogClick keydown->log-viewer#onKeydown"
    class="w-[90vw] max-w-5xl h-[80vh] p-0 rounded-lg shadow-2xl bg-[var(--theme-bg-primary)] text-[var(--theme-text-primary)] border border-[var(--theme-border)] backdrop:bg-black/50"
  >
    <div class="flex flex-col h-full">
      <!-- Header -->
      <div class="flex items-center justify-between px-4 py-3 border-b border-[var(--theme-border)] bg-[var(--theme-bg-secondary)]">
        <div class="flex items-center gap-3">
          <svg class="w-5 h-5 text-[var(--theme-text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <div>
            <h2 class="text-sm font-medium" data-log-viewer-target="title">Rails Log</h2>
            <p class="text-xs text-[var(--theme-text-muted)]" data-log-viewer-target="environment">-</p>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-xs text-[var(--theme-text-muted)]" data-log-viewer-target="status"></span>
          <button
            type="button"
            data-action="click->log-viewer#refresh"
            class="p-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
            title="Refresh"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </button>
          <button
            type="button"
            data-action="click->log-viewer#close"
            class="p-1.5 rounded hover:bg-[var(--theme-bg-hover)] text-[var(--theme-text-muted)]"
            title="Close (Esc)"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Tabs -->
      <div class="flex border-b border-[var(--theme-border)] bg-[var(--theme-bg-secondary)]">
        <button
          type="button"
          data-log-viewer-target="tabLogs"
          data-action="click->log-viewer#showLogs"
          class="px-4 py-2 text-xs font-medium border-b-2 border-[var(--theme-accent)] text-[var(--theme-text-primary)]"
        >Logs</button>
        <button
          type="button"
          data-log-viewer-target="tabConfig"
          data-action="click->log-viewer#showConfig"
          class="px-4 py-2 text-xs font-medium border-b-2 border-transparent text-[var(--theme-text-muted)] hover:text-[var(--theme-text-primary)]"
        >Config</button>
      </div>

      <!-- Log Content (tab 1) -->
      <pre
        data-log-viewer-target="content"
        class="flex-1 overflow-auto p-4 text-xs font-mono leading-relaxed bg-[var(--theme-bg-primary)] text-[var(--theme-text-secondary)] whitespace-pre-wrap break-words"
      >Loading...</pre>

      <!-- Config Content (tab 2, hidden by default) -->
      <div
        data-log-viewer-target="configContent"
        class="flex-1 overflow-auto p-4 text-xs font-mono bg-[var(--theme-bg-primary)] text-[var(--theme-text-secondary)] hidden"
      >Loading...</div>
    </div>
  </dialog>
</div>
