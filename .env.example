# FrankMD Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED (for production)
# ============================================

# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=

# ============================================
# PATHS
# ============================================

# Directory for storing notes (default: ./notes)
NOTES_PATH=./notes

# Directory for local images (optional, leave empty to disable)
IMAGES_PATH=./images

# Port to expose (default: 7591)
PORT=7591

# Docker user mapping (prevents bind-mount permission issues)
UID=1000   # set to: id -u
GID=1000   # set to: id -g

# ============================================
# OPTIONAL: AWS S3 (for image uploads)
# ============================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================
# OPTIONAL: YouTube Search
# ============================================

# Get from: https://console.cloud.google.com/
# Enable: YouTube Data API v3
YOUTUBE_API_KEY=

# ============================================
# OPTIONAL: Google Image Search
# ============================================

# Get from: https://console.cloud.google.com/
# Enable: Custom Search API
GOOGLE_API_KEY=

# Get from: https://programmablesearchengine.google.com/
# Create search engine with "Search entire web" + "Image search" enabled
GOOGLE_CSE_ID=

# ============================================
# OPTIONAL: AI/LLM Grammar Checking
# ============================================

# Provider: auto, ollama, openrouter, anthropic, gemini, openai
AI_PROVIDER=
AI_MODEL=

# Ollama (local, free) - use host.docker.internal in Docker
OLLAMA_API_BASE=
OLLAMA_MODEL=

# OpenRouter - https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_MODEL=

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=

# Google Gemini - https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_MODEL=

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=

# AI image generation model override
IMAGE_GENERATION_MODEL=

# ============================================
# OPTIONAL: Locale
# ============================================

# Language: en, pt-BR, pt-PT, es, he, ja, ko
FRANKMD_LOCALE=

# ============================================
# OPTIONAL: Cloudflare Tunnel
# ============================================

# Get from: https://one.dash.cloudflare.com/
# Create a tunnel and copy the token
CLOUDFLARE_TUNNEL_TOKEN=
